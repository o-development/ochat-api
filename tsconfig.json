{
  "compilerOptions": {
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "noImplicitAny": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/*"
  ]
}
